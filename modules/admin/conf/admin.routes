# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.admin.Assets.at(path="/public", file)

GET     /                           controllers.admin.Admin.index
GET     /login                      controllers.admin.Admin.login
POST    /login                      controllers.admin.Admin.doLogin
GET     /logout                     controllers.admin.Admin.logout

GET     /user                       controllers.admin.Admin.userIndex
GET     /user/list                  controllers.admin.Admin.userList

GET     /metrics/systemLoadAverage/:maxNumber           controllers.admin.Metrics.systemLoadAverage(maxNumber: Int)
GET     /metrics/heapMemoryUsage/:maxNumber             controllers.admin.Metrics.heapMemoryUsage(maxNumber: Int)
GET     /metrics/nonHeapMemoryUsage/:maxNumber          controllers.admin.Metrics.nonHeapMemoryUsage(maxNumber: Int)
GET     /metrics/swapMemoryUsage/:maxNumber             controllers.admin.Metrics.swapMemoryUsage(maxNumber: Int)
GET     /metrics/numberOfRequestsPerSecond/:maxNumber   controllers.admin.Metrics.numberOfRequestsPerSecond(maxNumber: Int)
