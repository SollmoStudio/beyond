# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.admin.Assets.at(path="/public", file)

GET     /                           controllers.admin.Admin.index
GET     /login                      controllers.admin.Admin.login
POST    /login                      controllers.admin.Admin.doLogin
GET     /logout                     controllers.admin.Admin.logout

GET     /user                       controllers.admin.Admin.userIndex
GET     /user/list                  controllers.admin.Admin.userList

GET     /metrics                    controllers.admin.Admin.metricsIndex
GET     /metrics/systemLoadAverage  controllers.admin.Admin.systemLoadAverage
GET     /metrics/heapMemoryUsage    controllers.admin.Admin.heapMemoryUsage
GET     /metrics/nonHeapMemoryUsage controllers.admin.Admin.nonHeapMemoryUsage
GET     /metrics/swapMemoryUsage    controllers.admin.Admin.swapMemoryUsage
GET     /metrics/numberOfRequests   controllers.admin.Admin.numberOfRequests
